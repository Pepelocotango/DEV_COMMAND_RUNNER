{
  "name": "dev-command-runner",
  "version": "1.0.0",
  "author": "Pep",
  "description": "Dev Command Runner",
  "main": "main.js",
  "scripts": {
    "dev": "node scripts/dev-runner.js",
    "vite-dev": "vite",
    "electron-dev": "electron .",
    "build": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.devcommandrunner.app",
    "productName": "Dev Command Runner",
    "files": [
      "build/**/*",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development",
      "icon": "icons/icon-512.png"
    }
  }
}