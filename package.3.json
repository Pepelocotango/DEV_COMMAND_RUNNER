{
  "name": "dev-command-runner",
  "version": "1.0.0",
  "author": "Pep",
  "description": "Dev Command Runner",
  "main": "electron-app.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.35",
    "simple-update-notifier": "^2.0.0",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.12",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.devcommandrunner.app",
    "productName": "Dev Command Runner",
    "files": [
      "build/**/*",
      "electron-app.js",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "output": "dist"
    },
    "linux": {
      "target": "AppImage",
      "category": "Development"
    }
  }
}
